<view class="container">
  <view class="title">
    <image class="title_img" src="./字体.png"> </image>
  </view>
  <view class="logo" style="top: {{statusBarHeight + lineHeight + 10}}px;">
    <image src="./logo.png" mode="widthFix"></image>
  </view>
  <!-- top -->
  <view class='dmGroup top' style="animation: dmAnimation2 14s  linear infinite; ">
    <view class='dmItem' wx:for="{{ dmList }}" wx:if="{{ index < dmList.length/3 }}" wx:key="*this">
      <view class='dm'>

        <view class='avatarBox'>
          <image wx:if="{{item.niming}}" src='../../../login/image/logo.jpg' class='avatar' mode='aspectFit'></image>
          <image wx:else src='{{ item.iconUrl }}' class='avatar' mode='aspectFit'></image>
        </view>
        <text wx:if="{{item.niming}}" class='user'>匿名</text>
        <text wx:else class='user'>{{ item.nickName }}</text>
        <text class='content'>{{ item.content }}</text>
      </view>

    </view>
  </view>
  <!-- mid -->
  <view class='dmGroup mid' style="animation: dmAnimation2 14s 0.5s linear infinite; ">
    <view class='dmItem' wx:for="{{ dmList }}" wx:if="{{ index >= dmList.length/3 && index < (dmList.length/3)*2 }}" wx:key="*this">
      <view class='dm'>
        <view class='avatarBox'>
          <image wx:if="{{item.niming}}" src='../../../login/image/logo.jpg' class='avatar' mode='aspectFit'></image>
          <image wx:else src='{{ item.iconUrl }}' class='avatar' mode='aspectFit'></image>
        </view>
        <text wx:if="{{item.niming}}" class='user'>匿名</text>
        <text wx:else class='user'>{{ item.nickName }}</text>
        <text class='content'>{{ item.content }}</text>
      </view>
    </view>
  </view>
  <!-- btm -->
  <view class='dmGroup btm' style="animation: dmAnimation2 14s 1s linear infinite; ">
    <view class='dmItem' wx:for="{{ dmList }}" wx:if="{{ index >= (dmList.length/3)*2  }}" wx:key="*this">
      <view class='dm'>
        <view class='avatarBox'>
          <image wx:if="{{item.niming}}" src='../../../login/image/logo.jpg' class='avatar' mode='aspectFit'></image>
          <image wx:else src='{{ item.iconUrl }}' class='avatar' mode='aspectFit'></image>
        </view>
        <text wx:if="{{item.niming}}" class='user'>匿名</text>
        <text wx:else class='user'>{{ item.nickName }}</text>
        <text class='content'>{{ item.content }}</text>
      </view>
    </view>
  </view>
</view>