.container {
  width: 100%;
  background: rgb(255, 255, 255);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 6rpx 0;
}

.text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: rgb(110, 109, 109);
}

.box {
  background-color: rgb(255, 255, 255);
  border-radius: 50%;
}

.loading {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  animation: animate 1.5s linear infinite;
}

@keyframes animate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  background: linear-gradient(0deg, rgb(255, 255, 255), mediumaquamarine);
  background-size: 25rpx 50rpx;
  border-radius: 25rpx 0 0 25rpx;
}

.loading::after {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-80%);
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background-color: mediumaquamarine;
}

.loading span {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  right: 6rpx;
  bottom: 6rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 50%;
}

@media (prefers-color-scheme: dark) {
  .container {
    background-color: rgb(15, 15, 15);
  }
  .box {
    background-color: rgb(15, 15, 15);
  }
  .loading span {
    background-color: rgb(15, 15, 15);
  }

  .loading::before {
    background: linear-gradient(0deg, rgb(15, 15, 15), mediumaquamarine);
  }
}