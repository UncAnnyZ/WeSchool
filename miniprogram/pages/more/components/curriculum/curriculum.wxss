.box {
  overflow: auto;
  border-radius: 25rpx;
  background-image: linear-gradient(to right, rgb(159, 221, 248), rgb(184, 233, 230));
  height: 235rpx;
  display: flex;
  flex-direction: column;
}

.headline {
  /* position: absolute; */
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.headline .firstBox {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  line-height: 28rpx;
}
.date {
  font-size: 28rpx;
  font-family: 'webfont';
}
.date::after {
  position: absolute;
  margin-left: 8rpx;
  content: "";
  width: 1rpx;
  height: 30rpx;
  background-color: rgb(51, 51, 51);
}
.week {
  margin: 0 20rpx;
  font-size: 28rpx;
  font-family: 'webfont';
}
.restCourse {
  font-size: 28rpx;
  font-family: 'webfont';
}
.schoolWeek {
  font-size: 28rpx;
}

.body {
  white-space: nowrap;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: auto;
}

.bodyCard {
  width: 400rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;

}

.decoration {
  position: absolute;
  background-color: rgb(26, 53, 58);
  width: 4rpx;
  height: 120rpx;
  border-radius: 40rpx;
}

.highlight {
  color: rgb(145, 158, 235) !important;
}

.courseName {
  width: 100rpx;
  color: rgb(66, 66, 66);
  margin-left: 25rpx;
  font-weight: bold;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.courseInfo {
  color: rgb(90, 89, 89);
  margin-left: 25rpx;
  padding-top: 6rpx;
  font-size: 24rpx;
}

.courseTime {
  color: rgb(90, 89, 89);
  margin-left: 25rpx;
  padding-top: 8rpx;
  font-size: 24rpx;
}

.wx-isclass {
  text-align: center;
  font-size: 35rpx;
  color: #1cbbb4;
}
@media (prefers-color-scheme: dark) {
  .bodyCard {
    filter: invert(1);
  }
}