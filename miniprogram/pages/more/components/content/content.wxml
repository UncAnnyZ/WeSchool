<view class="content">
  <view class="contentInner showArea {{!onFold ? 'text-clamp' + maxline : ''}}" bindtap="{{foldable ? 'handleFold' : ''}}">{{content}}</view>
  <view class="contentInner hideArea">{{content}}</view>
  <view class="foldInner {{position === 'right' ? 'flex-end' : 'flex'}}" wx:if="{{showFold}}">
    <text class="fold" catchtap="handleFold">{{onFold ? "收起" : "全文"}}</text>
  </view>
</view>