<view class="head">
  <!-- 状态栏 -->
  <view style="width: 100%; height: 200rpx; position: absolute;"> </view>
  <view style="height: {{statusBarHeight}}px;" />
  <!-- 导航栏 -->
  <view class="head_second" style="height: {{lineHeight}}px;">
    <input placeholder="搜索你感兴趣的内容" class="searchInput" confirm-type="search" focus='true' bindblur="searchBlur" />
    <image src="../../images/search.png"></image>
  </view>
  <!-- 历史记录 -->
  <view class="historySearch">
    <block wx:if="{{!isHidden}}">
      <view class="historySearch_title">
        <text style="align-content: center; font-weight: 400; font-size: larger;">历史搜索</text>
        <image src="../../images/delete.svg" bindtap="deleteHistory" style="width: 55rpx; height: 80rpx;"></image>
      </view>
      <view class="historySearch_content">
        <view class="historySearch_content_item">
          <block wx:for="{{localSearchKey}}">
            <view style="width: {{item.length * 50}}rpx;" bindtap="searchRedirect" data-name="{{item}}">{{item}}</view>
          </block>
        </view>
      </view>
    </block>
  </view>
  <!-- 热点搜索 -->

  <view class="hotSearch">
    <view class="hotSearch_title">
      <text style="align-content: center; font-weight: 400; font-size: larger;">热门搜索</text>
    </view>
    <view class="hotSearch_content">
      <view class="hotSearch_content_item" bindtap="searchHot">
        <block wx:for="{{hotSearchKey}}" wx:key="index">
          <view style="width: {{item.length * 50}}rpx;" bindtap="searchRedirect" data-name="{{item}}">{{item}}</view>
        </block>
      </view>
    </view>

  </view>
</view>
<view style="height: {{(statusBarHeight + lineHeight)}}px;"></view>
<view style=" width: 100%;  position: absolute; height: 400rpx;"></view>