/* pages/more/components/searchPage/searchPage.wxss */
.gradient-layer {
  transform: translate(0, -60rpx);
  width: 100%;
  position: fixed;
  height: 150px;
  box-shadow: inset 0rpx 0rpx 80rpx 60rpx rgba(255, 255, 255);
  background-image: linear-gradient(
    to right,
    rgba(212, 240, 255, 0.9) 25%,
    rgba(255, 198, 227, 0.8)
  );
}

.head_second {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  width: 100vw;
}

.head_second image {
  position: absolute;
  left: 20rpx;
  width: 45rpx;
  height: 45rpx;
}

.head_second .title {
  letter-spacing: 5rpx;
}

.historySearch_title {
    margin-top: 60rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.historySearch_content_item {
    margin: 30rpx 30rpx ;
    display: flex;
    flex-wrap: wrap;
}

.historySearch_content_item view {
    height: 50rpx;
    margin: 10rpx;
    text-align: center; 
    line-height: 50rpx;
    background-color: rgb(240,240,240);
    border-radius: 60rpx;
    color: rgb(33,33,33);
}
.hotSearch_title {
  margin-top: 60rpx;
