.model-body-true .model-body-choose-1-true,
.model-body-true .model-body-choose-2-true
{
  width: 45%;
  height:99%;
  transition: all .2s;
}

.model-body-choose-text-1-true,
.model-body-choose-text-2-true
{
  font-size: 30rpx;
  transition: all .5s;
}
