  justify-content: center;
  font-size: 40rpx;
  margin: 0rpx 20rpx;
  white-space:normal;
  word-wrap:break-word;
  box-sizing: border-box;
  padding: 10rpx;
}
.model-body-choose-text{
  width: 100%;
  text-align: center;
