/* pages/myself/fansAndfocus/fansAndfocus.wxss */

.top{
  height:70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.focusBefore,
.fansBefore{
  width: 100rpx;
  height: 50rpx;
  font-size: 28rpx;
  color: rgba(63, 63, 63, 0.644);
  display: flex;
  justify-content: center;
  align-items: center;
}
.fansAfter,
.fansBefore{
  margin-left: 160rpx;
}
.focusAfter,
.fansAfter{
  font-weight: 550;
  color: black;
  font-size: 28rpx;
  border-bottom: 3rpx solid red;
}
.showArry{
  display: flex;
  flex-direction: row;
  padding: 0rpx 40rpx;
  margin-bottom: 25rpx;
}
.showArry image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
}
.user{
  margin-left: 20rpx;
  line-height: 38rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userName,
.nickName{
  font-size: 28rpx;
}
.null{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  width: 100%;
  color: rgba(70, 70, 70, 0.616);
}